<div class="row">
  <div class="col-lg-8">
    <h2>Everyone</h2>
    <% if @posts %>
      <% @posts.order(id: :desc).each do |post| %>
        <%= render "posts/show", p: post %>
      <% end %>
    <% else %>
      No posts.
    <% end %>
  </div>
  <div class="col-lg-4">
    <div class="affix">
      <%= link_to 'New', new_post_path %><br>
    </div>
  </div>
</div>
<script type="text/javascript">
    setActive("li-everyone");
</script>
