<div class="row">
  <div class="col-lg-9">
    <% if @post %>
      <h2>Showing post #<%= @post.id %></h2>
      <%= render "posts/show", p: @post %>
    <% else %>
      <h2>No post</h2>
    <% end %>
  </div>
  <div class="col-lg-3">
    <div class="affix menu_right">
      <%= link_to 'New post', new_post_path, class: "btn btn-success" %>
    </div>
  </div>
</div>