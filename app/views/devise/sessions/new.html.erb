<h2>Log in</h2>

<div class="row">
  <div class="col-lg-4">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.text_field :login, hide_label: :true, placeholder: "Login", icon: "user" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", hide_label: :true, placeholder: "Password", icon: "lock" %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-8"></div>
</div>

